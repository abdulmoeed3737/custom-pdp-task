        <h2>Choose Colour</h2>
        <div class="color-swatches">
          {% for color_swatch in shop.metaobjects.color.values %}
            <div class="color-swatch" value={{ color_swatch.name }}>
              <div style="background: {{ color_swatch.color }}" class="bg"></div>
