            <div class="fabric-swatch" value={{ fabric_swatch.name }}>
              <img src="{{ fabric_swatch.image | img_url: 'master' }}"/>
              <span class="fabric-swatch-name">{{ fabric_swatch.name }}</span>
            </div>
          {% endfor %}
        </div>
      </div>
